<?xml version="1.0" encoding="utf-8"?>
    
      
    <LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ff0000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
      <RelativeLayout 
        android:id="@+id/d"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

    <RelativeLayout
        android:id="@+id/FOUR"
        android:layout_width="125dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/d3"
        android:background="#efefef" >

        <pt.feup.stockportfolio.TextViewFont
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shares"
            android:layout_centerHorizontal="true"
            android:text="shares"
            android:textColor="#a7a9ab"
            android:textSize="15sp" />

	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/TextView04"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="5dp" >

        <LinearLayout
            android:id="@+id/increaseshares"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#ff0000"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/plus" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/decreaseshares"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/increaseshares"
            android:background="#ff0000"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/minus" />

        </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/shares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="0"
            android:textColor="#8cc63e"
            android:textSize="40sp" />
        
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/d3"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/FOUR"
        android:layout_alignParentLeft="true"
        android:background="#efefef" >
	
       <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:text="..."
            android:textColor="#ff0000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/close"
            android:layout_alignLeft="@+id/close"
            android:layout_marginBottom="-5dp"
            android:text="trading at"
            android:textColor="#a7a9ab"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/updating"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="gone" />
	        
    </RelativeLayout>
            <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:background="#efefef" >

        <EditText
            android:id="@+id/ticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:hint="ticker"
            android:textColor="#a7a9ab"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/accept"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ticker"
            android:layout_marginRight="10dp"
            android:background="#ff0000"
            android:gravity="center" >

            <ImageView
                android:id="@+id/button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/sync" />
        </LinearLayout>

    </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
  

</LinearLayout>
    